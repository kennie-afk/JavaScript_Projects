{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@models": ["src/models/index.ts"],
      "@config/*": ["src/config/*"],
      "@users/*": ["src/users/*"],
      "@families/*": ["src/families/*"],
      "@members/*": ["src/members/*"],
      "@events/*": ["src/events/*"],
      "@announcements/*": ["src/announcements/*"],
      "@sermons/*": ["src/sermons/*"],
      "@contributions/*": ["src/contributions/*"],
      "@attendance/*": ["src/attendance/*"],
      "@ministries/*": ["src/ministries/*"],
      "@small_groups/*": ["src/small_groups/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}